{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src", "building-blocks/Beacon.tsx", "building-blocks/Construct.tsx", "building-blocks/Cursor.tsx", "building-blocks/FancyButton.tsx", "building-blocks/MapPin.tsx", "building-blocks/MinerController.tsx", "building-blocks/Me.tsx", "building-blocks/MyConstructs.tsx", "building-blocks/MapPlaces.tsx", "building-blocks/ThreeConstruct.tsx", "building-blocks/WavyText.tsx", "building-blocks/ThreeOperator.tsx", "building-blocks/YondarMap.tsx"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
